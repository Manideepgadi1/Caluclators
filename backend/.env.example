# Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
ENVIRONMENT=production
DEBUG=false

# CORS Settings (add your domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security
# Generate a strong secret key: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/backend.log

# Database (uncomment when you add database support)
# DATABASE_URL=postgresql://user:password@localhost:5432/financialdb
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# Redis (uncomment if you add caching)
# REDIS_URL=redis://localhost:6379/0

# API Rate Limiting
# RATE_LIMIT_PER_MINUTE=60

# Sentry (for error tracking, optional)
# SENTRY_DSN=your-sentry-dsn-here

# Email (for notifications, optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com
